<p class="alert alert-info" id="notice"><%= notice %></p>

<p>
  <strong>Nome:</strong>
  <%= @cliente.nome %>
</p>

<p>
  <strong>Email:</strong>
  <%= @cliente.email %>
</p>

<p>
  <strong>Conta:</strong>
  <%= @cliente.conta %>
</p>

<p>
  <strong>Saldo:</strong>
  <%= @cliente.saldo %>
</p>
<span onclick="myFunction()"><a class="extrato">Extrato</a></span> |
<%= link_to 'Sacar', sacar_path %> |
<%= link_to 'Transferir', transferir_path %> |
<%= link_to 'Voltar', clientes_path %> |
<%#= link_to 'Deletar', cliente_path(@cliente),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>

<div id="myDIV" style="display:none">
  <hr>
  <table class="table thead-dark">
  <thead>
    <tr>
      <th>Tipo</th>
      <th>Conta de Origem</th>
      <th>Conta de Destino</th>
      <th>Valor</th>
      <th>Data</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @extratos.each do |key,value| %>
      <tr>
        <td><%= value.tipo %></td>
        <td><%= value.conta_origem %></td>
        <td><%= value.conta_destino %></td>
        <td><%= value.valor %></td>
        <td><%= value.created_at %></td>
        <td><%= value.status %></td>
        </tr>
    <% end %>
  </tbody>
</table>
</div>

<script>
  function myFunction() {
    var x = document.getElementById("myDIV");
    if (x.style.display === "none") {
      x.style.display = "block";
    } else {
      x.style.display = "none";
    }
  }
</script>
